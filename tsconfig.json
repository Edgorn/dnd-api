{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true, // Permite compilar archivos JavaScript
    "checkJs": false // Opcional: desactiva la comprobaci√≥n de tipo en archivos JavaScript
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}